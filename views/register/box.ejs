<div class="col-md-4 col-md-offset-4">
    <form class="form-signin" action="javascript:register($('.inputEmail').val(),$('.inputPassword').val(),$('.inputPassword2').val());" style="background:#fff;padding:15px;padding-top:5px;border-radius: 7px;">
        <h2 class="form-signin-heading">Login to <%=settings.title%></h2>
        <label for="inputEmail" class="sr-only">Email address</label>
        <input type="email" class="form-control inputEmail" id="inputEmail" placeholder="Email address" required autofocus>
        <label for="inputPassword" class="sr-only">Password</label>
        <input type="password" class="form-control inputPassword form-middle" style="margin-bottom: -1px;" id="inputPassword" placeholder="Password" required>
        <label for="inputPassword2" class="sr-only">Password</label>
        <input type="password" class="form-control inputPassword2" id="inputPassword2" placeholder="Confirm Password" required>
        <button class="btn btn-lg btn-primary btn-block" type="submit">Register</button>
    </form>
</div>