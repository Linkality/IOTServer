<div class="col-md-6 col-md-offset-3 edit-box">
    <form class="form-signin panel panel-default" action="javascript:;" style="background:#fff;padding:15px;padding-top:5px;border-radius: 7px;">
        <h2 class="form-signin-heading">Editing <%=location.type%> "<%=location.name%>"</h2>
        <br/>
        <div class="row">
            <div class="col-md-4" style="text-align:right;"><label for="inputLabel" style="padding-top:12px;">Label</label></div>
            <div class="col-md-8"><input type="text" value="<%=location.label%>" class="form-control inputLabel" id="inputLabel"/></div>
        </div>
        <br/>
        <div class="row">
            <div class="col-md-4" style="text-align:right;"><label for="inputName" style="padding-top:12px;">Name</label></div>
            <div class="col-md-8"><input type="text" value="<%=location.name%>" class="form-control inputName" id="inputName"/></div>
        </div>
        <br/>
        <div class="row">
            <div class="col-md-4" style="text-align:right;"><label for="inputReference" style="padding-top:12px;">Reference #</label></div>
            <div class="col-md-8"><textarea type="text" class="form-control inputReference" id="inputReference"><%=location.reference%></textarea></div>
        </div>
        <br/>
        <div class="row">
            <div class="col-md-4" style="text-align:right;"><label for="inputLat" style="padding-top:12px;">Latitude</label></div>
            <div class="col-md-8"><input type="text" value="<%=location.lat%>" class="form-control inputLat" id="inputLat" disabled="disabled"/></div>
        </div>
        <br/>
        <div class="row">
            <div class="col-md-4" style="text-align:right;"><label for="inputLng" style="padding-top:12px;">Longitude</label></div>
            <div class="col-md-8"><input type="text" value="<%=location.lng%>" class="form-control inputLng" id="inputLng" disabled="disabled"/></div>
        </div>
        <br/>
        <input type="hidden" value="<%=location.name%>" class="form-control inputNameKey" id="inputNameKey"/>
        <div class="row">
            <div class="col-md-3">
                <button class="btn btn-lg btn-block" onclick="socket.emit('index');showLoader();">Back</button>
            </div>
            <div class="col-md-3">
                 <button class="btn btn-lg btn-danger btn-block" onclick="deleteLocation('<%=location.name%>');">Delete</button>
            </div>
            <% if (location.type=="beacon") { %>
                <div class="col-md-3">
                     <button class="btn btn-lg btn-primary btn-block" onclick="saveLocation('<%=location.name%>');">Save</button>
                </div>
                <div class="col-md-3">
                     <button class="btn btn-lg btn-default btn-block" onclick="openLocationEvents('<%=location.name%>');">Events</button>
                </div>
            <% }else{ %>
                <div class="col-md-6">
                     <button class="btn btn-lg btn-primary btn-block" onclick="saveLocation('<%=location.name%>');">Save</button>
                </div>
            <% } %>
        </div>
    </form>
</div>
<script language="javascript">
    $(".inputLabel").focus();
</script>