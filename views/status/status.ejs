<div class="col-md-4 col-md-offset-4">
    <h2>Current Status: <span class="status" style="display:block;text-align:center;"></span></h2>
    <script language="javascript">
        call('status', {},function(data){
            if(data.code ==1){
                $(".status").html("DB connected and working!");
            }else{
                $(".status").html("DB failed, error");
            }
        });
    </script>
</div>